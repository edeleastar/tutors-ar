{% from "json/lo-json.njk" import loJson %}

{% block content %}
  {
  {{ loJson(lo) }},
  "chapters" : [
  {% for chapter in lo.chapters %}
    {
    "title": "{{ chapter.title }}",
    "shortTitle": "{{ chapter.shortTitle }}",
    "contentMd" : {{  chapter.contentMd }}
    }{% if (not loop.last) %},{% endif %}
  {% endfor %}
  ]
  }
{% endblock %}
