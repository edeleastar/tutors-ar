{% from "head-component/walls.njk" import walls %}
{% from "head-component/companion.njk" import companion %}
{% from "head-component/home.njk" import home %}
{% from "head-component/title.njk" import title %}
{% from "head-component/toclink.njk" import tocLink %}
{% from "head-component/crestlink.njk" import crestLink %}

{% macro header(lo, iswall, wallTitle) %}
  <div class="uk-flex uk-flex-center uk-flex-middle uk-text-center uk-container-expand uk-padding-small" uk-grid>
    {{ tocLink(lo) }}
    {{ title(lo, iswall, wallTitle) }}
    {{ home(lo, iswall) }}
    {% if lo.properties.toolbarOff != 1 %}
      {{ walls(lo) }}
    {% endif %}
    {{ crestLink(lo) }}
  </div>
{% endmacro %}
